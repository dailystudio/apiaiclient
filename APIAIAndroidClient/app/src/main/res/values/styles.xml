<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SectionLabel">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/section_label_font_size</item>
        <item name="android:padding">@dimen/app_ver_padding</item>
    </style>

    <style name="AppVerName">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/app_ver_font_size</item>
        <item name="android:paddingStart">@dimen/app_ver_padding</item>
    </style>

    <style name="ChatText" parent="DefaultLabel">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="ChatTextSend" parent="ChatText">
    </style>

    <style name="ChatTextRecv" parent="ChatText">
    </style>

    <style name="BaseListView" parent="DefaultListView">
        <!--
                <item name="android:listSelector">@drawable/base_list_selector</item>
        -->
    </style>

    <style name="BaseDialogTitle" parent="DefaultLabel" >
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
