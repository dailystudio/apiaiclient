<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dailystudio.apiaiwebclient">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <application
        android:allowBackup="true"
        android:name=".APIAIWebClientApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.GeneratorActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/activity_generator"
            android:theme="@style/AppTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <provider
            android:name=".APIAIWebClientDatabaseContentProvider"
            android:authorities="com.dailystudio.apiaiwebclient"
            android:exported="true"/>

        <service android:name=".database.ResolveAgentService"/>

    </application>

</manifest>